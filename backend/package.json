{
  "name": "admin-panel",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "author": "",
  "license": "ISC",
  "description": "Panel de administraci√≥n de La Lupa con Electron y Supabase",

  "scripts": {
    "dev": "node server.js",
    "start": "electron .",
    "build": "electron-builder"
  },

  "dependencies": {
    "@supabase/supabase-js": "^2.58.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "imagekit": "^6.0.0",
    "multer": "^2.0.2"
  },

  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^25.0.0"
  },

  "build": {
    "appId": "com.lalupa.adminpanel",
    "productName": "AdminPanel",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!AdminPanel-*",
      "!.gitignore"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/logo.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/logo.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/logo.png"
    }
  }
}